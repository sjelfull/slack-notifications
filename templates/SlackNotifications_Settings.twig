{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Slack webhook',
    instructions: 'Enter some setting here.',
    id: 'webhook',
    name: 'webhook',
    value: settings['webhook']})
}}

{{ forms.lightswitchField({
    label: "Allow Disabled Entry Notifications",
    instructions: "If you're working with disabled entries, enable this.",
    name: 'notifyDisabled',
    on:   settings.notifyDisabled
}) }}